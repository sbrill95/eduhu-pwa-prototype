{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd frontend && npm run build",
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.ts"
    },
    {
      "src": "/api/chat/health",
      "dest": "/api/chat/health.ts"
    },
    {
      "src": "/api/chat/models",
      "dest": "/api/chat/models.ts"
    },
    {
      "src": "/api/chat",
      "dest": "/api/chat/index.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}